<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h2">Articles</h1>

    <% if @articles.exists? %>
      <%= link_to 'Ajouter', new_article_path, class: "btn btn-default" %>
    <% end %>
  </div>

  <% if @articles.exists? %>
    <div class="bg-white rounded shadow">
      <table class="w-full">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Titre</th>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Texte</th>

            <th class="p-3 uppercase text-left text-xs text-gray-700">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @articles.each do |article| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                          <td class="p-3"><%= article.title %></td>
                          <td class="p-3"><%= article.body %></td>
            
            <td>
              <%= link_to "Voir", article, class: "btn btn-default" %>
              <%= link_to "Modifier", edit_article_path(article), class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <div class="bg-white rounded shadow flex items-center justify-between p-8">
      <div class="flex-1 text-center">
        <p class="text-xl font-semibold mb-4">Ajouter un article</p>
      <%= link_to 'Nouvelle article', new_article_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
