<div class="container mx-auto my-8 px-4">
  <div class="flex justify-between items-center mb-4">
    <h1 class="h2">Compétences</h1>

    <% if @competences.exists? %>
      <%= link_to 'Ajouter', new_competence_path, class: "btn btn-default" %>
    <% end %>
  </div>

  <% if @competences.exists? %>
    <div class="bg-white rounded shadow">
      <table class="w-full">
        <thead>
          <tr>
            <th class="p-3 uppercase text-left text-xs text-gray-700">Titre</th>

            <th class="p-3 uppercase text-left text-xs text-gray-700">Actions</th>
          </tr>
        </thead>

        <tbody>
        <% @competences.each do |competence| %>
          <tr class="group border-t border-gray-400 hover:bg-gray-100">
                          <td class="p-3"><%= competence.competence %></td>
            
            <td>
              <%= link_to "Voir", competence, class: "btn btn-default" %>
              <%= link_to "Modifier", edit_competence_path(competence), class: "btn btn-default" %>
            </td>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

  <% else %>
    <div class="bg-white rounded shadow flex items-center justify-between p-8">
      <div class="flex-1 text-center">
        <p class="text-xl font-semibold mb-4">Ajouter une compétence</p>
      <%= link_to 'Nouvelle compétence', new_competence_path, class: "btn btn-default" %>
      </div>
    </div>
  <% end %>
</div>
